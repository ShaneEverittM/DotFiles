#!/bin/bash

########################
# System Configuration #
########################

#hotkey controller
sxhkd -c $HOME/.config/bspwm/sxhkd/sxhkdrc &

#will need to change if monitor setup changes
bspc monitor DVI-I-1 -d I II III IV V
bspc monitor HDMI-0 -d I II III IV V

########################
# Visual Configuration #
########################

bspc config border_width         2
bspc config window_gap          12
bspc config bottom_padding         28

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config focused_border_color "#4a039c"
bspc config normal_border_color "#4b3663"
bspc config active_border_color "#4b3663"
bspc config presel_feedback_color "#4b3663"

########################
#     Window Rules     #
########################

#Ignore Screenkey
bspc rule -a Screenkey manage=off

# ignore plasma stuff and krunner
bspc rule -a plasmashell state=floating border=off layer=normal
bspc rule -a krunner state=floating border=off layer=above
bspc rule -a yakuake layer=above state=floating

#kwin style resizing and moving for floating windows
bspc config pointer_modifier mod1
bspc config pointer_action1 resize_side
bspc config pointer_action1 resize_corner
bspc config pointer_action3 move

#click to focus
bspc config click_to_focus true



# custom rules for specific applications
#Imagine theres a rule here that says spotify opens on HDMI desktop III
